// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  ADMIN
  SUPER_ADMIN
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
}

enum OrderStatus {
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}

enum DiscountType {
  PERCENTAGE
  FIXED
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(USER)
  phone     String?
  orders    Order[]
  wishlist  Wishlist?
  reviews   Review[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([email])
}

model Wishlist {
  id        String    @id @default(cuid())
  userId    String    @unique
  user      User      @relation(fields: [userId], references: [id])
  products  Product[]
  updatedAt DateTime  @updatedAt
}

model Review {
  id        String   @id @default(cuid())
  rating    Int      @default(5)
  comment   String?  @db.Text
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  productId String
  product   Product  @relation(fields: [productId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([productId])
  @@index([userId])
}

model Category {
  id        String    @id @default(cuid())
  name      String
  slug      String    @unique
  products  Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  
  @@index([slug])
}

model Product {
  id          String      @id @default(cuid())
  name        String
  description String      @db.Text
  priceNGN    Float
  priceUSD    Float?
  categoryId  String
  category    Category    @relation(fields: [categoryId], references: [id])
  images      String[]
  sizes       String[]
  colors      String[]
  stock       Int         @default(0)
  isActive    Boolean     @default(true)
  orderItems  OrderItem[]
  wishlistedBy Wishlist[]
  reviews     Review[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  
  @@index([name])
  @@index([categoryId])
}

model Order {
  id              String        @id @default(cuid())
  userId          String
  user            User          @relation(fields: [userId], references: [id])
  totalAmount     Float
  currency        String        @default("NGN")
  paymentStatus   PaymentStatus @default(PENDING)
  orderStatus     OrderStatus   @default(PROCESSING)
  shippingAddress String        @db.Text
  items           OrderItem[]
  paystackRef     String?       @unique
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  
  @@index([userId])
  @@index([paymentStatus])
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  order     Order   @relation(fields: [orderId], references: [id])
  productId String
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int
  price     Float
  size      String?
  color     String?
}

model Coupon {
  id            String       @id @default(cuid())
  code          String       @unique
  discountType  DiscountType
  discountValue Float
  expiresAt     DateTime
  isActive      Boolean      @default(true)
  createdAt     DateTime     @default(now())
}
